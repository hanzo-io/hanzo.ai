#index > main
  .hero
    background $hanzoIndigo
    background: -webkit-linear-gradient(180deg, $hanzoIndigo, $hanzoPurpleDarker)
    background: linear-gradient(180deg, $hanzoIndigo, $hanzoPurpleDarker)
    height: auto
    padding-bottom: 30vh

    &:after
      content: ''
      display: block
      position: absolute
      bottom: 0
      width: 200vw
      height: 80px
      background: white
      left: -1vw
      transform: rotate(-2deg)

    h1
      color: $hanzoGreen

    .button
      margin $spacing * 2 $spacing * 2 0 0

  .support-crypto
    color: #263238
    padding-top: 10vh
    padding-bottom: 10vh

    h2
    h4
      color: $hanzoPurple

    .content
      margin-bottom: $spacing * 4

    .columns
      align-items: flex-start

      +above($tabletWidth + 1)
        .column:first-child
          margin-right: $spacing * 3

        .column:last-child
          margin-left: $spacing * 3

    h4
      margin: 0 0 $spacing * 3

    .item
      .columns
        align-items: center
        flex-direction: row

        div
          flex: 0 0 80px
          svg
            path
              fill: $hanzoGreen

        p
          margin: 0

  .developers-first
    background-color: $hanzoIndigo
    padding-top: 20vh
    padding-bottom: 15vh

    &:before
      content: ''
      display: block
      position: absolute
      top: 10px
      width: 200vw
      height: 80px
      background: $hanzoIndigo
      left: -1vw
      transform: rotate(.9deg)

    &:after
      content: ''
      display: block
      position: absolute
      top: 0px
      width: 200vw
      height: 80px
      background: white
      left: -1vw
      transform: rotate(2deg)

    h2
      color: $hanzoGreen

    .content
      margin-bottom: $spacing * 4

      p
        padding 0

    .columns
      align-items: flex-start

      +above($tabletWidth + 1)
        .column:first-child
          margin-right: $spacing * 3

        .column:last-child
          margin-left: $spacing * 3

      .column
        .content
          p
            a
              color: $hanzoGreen
              text-decoration: none

    .item
      .columns
        align-items: center
        flex-direction: row

        div
          flex: 0 0 80px
          svg
            path
              fill: $hanzoGreen

        p
          margin: 0

  .get-started
    background-color: $hanzoIndigoDarker
    padding-top: 15vh
    padding-bottom: 20vh

    &:before
      content: ''
      display: block
      position: absolute
      top: -30px
      width: 200vw
      height: 80px
      background: $hanzoIndigoDarker
      left: -1vw
      transform: rotate(-.9deg)

    h2
      color: $hanzoGreen
      margin: 0

    .button
      margin $spacing * 2 $spacing * 2 $spacing * 2 0

  .docs-button
    background-color: $white
    color: $hanzoPurple

  .join-button
    background-color: $hanzoPurple

  // Short notice form
  .modal-form
    width: 100vw
    height: 100vh
    position: fixed
    z-index: 2000
    top: 0
    left: 0
    background: $hanzoIndigo
    overflow: auto
    opacity: 0
    pointer-events: none
    transition: opacity $transitionTime ease-in-out

    .close-demo-form
      position: absolute
      right: 2rem
      top: 2rem
      font-size: 3rem
      line-height: 2rem

    .thank-you
      font-size: 2rem
      position: absolute
      top: 50%
      transform: translateY(-50%)
      text-align: center

    h2
      color: $hanzoGreen

    h4
      color: white
      margin-bottom: 1rem

    input
    textarea
      outline: 0
      border: 1px solid rgba(255, 255, 255, 0.3)
      border-radius: 4px
      height: 2.5rem
      line-height: 2.5rem
      padding: 0rem 1rem
      display: block
      margin: .5rem 0 1rem
      font-size: 1rem
      width: 100%
      background-color: transparent
      color: white

      &::-webkit-input-placeholder
        color: white
      &:-ms-input-placeholder
        color: white
      &::-moz-placeholder
        color: white
      &:-moz-placeholder
        color: white
      &:placeholder
        color: white

    textarea
      height: 200px

    button
      line-height: 1rem
      font-weight: 400
      background-color: $hanzoPurple


    form
      padding: 2rem

    input[type=radio]
      display: none

    .options
      display: table
      margin: .5rem 0 1rem
      width: 100%
      position: relative

      label
        max-width: 45%
        width: 200px
        transition: all $transitionTime ease-in-out
        padding: 1rem
        position: relative
        left: 0
        top: 0
        display: inline-block
        text-align: center
        transform: translateX(105%)
        border: 1px solid white
        border-radius: 4px

        &:last-child
          position: absolute

      input:checked + label
        background-color: white
        color: $hanzoPurple
        transform: none

  #demo-form
    textarea
      font-family: monospace

  #demo-form-toggle
    display: none

  #demo-form-toggle:checked ~ .modal-form
    opacity: 1
    pointer-events: initial

