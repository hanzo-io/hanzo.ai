  .hero
    // background: linear-gradient(135deg, #3c72d0 0%,#3b77ce 21%,#25d4a7 61%,#34e4ea 100%)
    background: linear-gradient(66deg, #4776E6 10%,#8E54E9 57%,#411C6D 100%)
    text-align: center
    height: 80vh !important
    min-height: 600px !important

  .scale-your-business
    .content
      position: relative
      margin: ($spacing * 4) 0
      +below($phoneWidth)
        text-align: center

      h4
        color: $headerColor2

      &:last-child
        .macbook
          position: absolute
          width: 50vw
          max-width: initial
          top: 0
          left: 0
          transform: translateY(-50%)
        .iphone
          position: absolute
          width: 15vw
          max-width: initial
          top: 0
          left: 27.5vw
          transform: translateY(-25%)

        +below($phoneWidth)
          width: 100%

          .macbook
            width: 100%
            position: relative
            transform: none
          .iphone
            width: 30%
            left: 50%
            transform: translateY(20%)

    .title-icon
      max-width: 50px

  .blueprint-to-success
    background-color: $backgroundColor2

    h3
      color: $headerColor2

    .background
      mask-image: url('/img/blueprint-mask.svg')
      mask-mode: alpha
      mask-repeat: no-repeat
      mask-position: top center
      mask-size: contain
      position: absolute
      left: 0
      width: 100vw
      height: 100%
      background-color: transparent
      pointer-events: none

      .floating-background
        background: linear-gradient(to bottom, #8e54e9 0%,#6b91bf 25%,#5fb0b7 50%,#5bc8af 75%,#d6f7a3 100%)
        background-attachment: fixed
        z-index: -1
        width: 100vw
        height: 100%

    .group
      width: 50%
      display: inline-block
      position: relative

      &.group-1
        left: 48%
        margin-top: 2%

      &.group-2
        width: 58%
        left: 0%
        margin-top: 5%

      &.group-3
        left: 48%
        margin-top: 3%

      &.group-4
        width: 58%
        left: 0%
        margin-top: 1%

      &.group-5
        left: 48%
        margin-top: 0%

    +below($phoneWidth)
      .background
        display: none

      .group.group
        width: 100%
        left: 0%
        text-align: center

  .re-architecting
    background-color: $backgroundColor2
    min-height: 0
    text-align: center
    padding-top: $spacing * 4
    padding-bottom: $spacing * 4

  .success-stories
    margin: ($spacing * 4) 0 ($spacing * 8)

    .content
      width: 100%

      .image
        height: 200px
        position: relative
        box-shadow: 2px 4px 2px .5px $shadowColor2
        transition: all $transitionTime ease-in-out

        &:before
          content: ''
          width: 100%
          height: 100%
          background-color: rgba(0,0,0,.6)
          display: block
          pointer-events: none
          transition: all $transitionTime ease-in-out

        img
          margin: 0 auto
          left: 0
          right: 0
          position: absolute
          top: 50%
          transform: translateY(-50%)
          padding: $spacing * 4
          transition: all $transitionTime ease-in-out

        &:hover
          transform: scale(1.1)

          &:before
            opacity: 0

          img
            opacity: 0

      p
        text-align: center
        padding: ($spacing * 4) 0
        border-bottom: 1px solid $textColor3
        margin 0 ($spacing * 2)
        margin-bottom: ($spacing * 4)

      &.kanoa-story
        .image
          background-image: url('/img/kanoa-screenshot.jpg')
          background-size: cover
          background-repeat: no-repeat
          background-position: top center

      &.skully-story
        margin: 0 ($spacing * 4)

        +below($phoneWidth)
          margin: 0

        .image
          background-image: url('/img/skully-screenshot.jpg')
          background-size: cover
          background-repeat: no-repeat
          background-position: center

      &.bb-story
        .image
          background-image: url('/img/bb-screenshot.jpg')
          background-size: cover
          background-repeat: no-repeat
          background-position: center

  .hanzo-products
    margin: ($spacing * 4) 0
    align-items: flex-start

    .card
      h4
        color: $textColor1
        text-align: center
        border-bottom: 1px solid $borderColor1

      .image
        height: 200px
        width: 100%

      +below($phoneWidth)
        margin: 0 0 2rem
        text-align: center

    .marketing-card
      background-color: #7b4397
      background: linear-gradient(135deg, #7b4397, #dc2430)

      .image
        background-image: url('/img/hanzo-marketing.svg')
        background-repeat: no-repeat
        background-position: center
        background-size: contain

    .commerce-card
      background-color: #ff8008
      background: linear-gradient(135deg, #ff8008, #ffc837)
      margin: 0 4rem

      .image
        background-image: url('/img/hanzo-commerce.svg')
        background-repeat: no-repeat
        background-position: center
        background-size: contain

    .analytics-card
      background-color: #2c3e50, #3498db
      background: linear-gradient(135deg, #2c3e50, #3498db)

      .image
        background-image: url('/img/hanzo-analytics.svg')
        background-repeat: no-repeat
        background-position: center
        background-size: contain

  .developer-playground
    background-color: $backgroundColor2
    padding-top: ($spacing * 8)
    padding-bottom: ($spacing * 4)

    .content

      h3
        color: $headerColor2
        text-align: center

      h4
        &:nth-child(1)
          text-align: left
        &:nth-child(2)
          text-align: center
        &:nth-child(3)
          text-align: right

      p
        text-align: center

  .partner-integrations
    margin-top: ($spacing * 4)

    h3
      color: $headerColor2
      text-align: center

    .logos
      margin: ($spacing * 4) 0

      .logo
        height: 50px
        background-repeat: no-repeat
        background-position: center
        background-size: contain
        margin: 0 ($spacing * 4)

        &.kickstarter
          background-image: url('/img/integration-logos/kickstarter.svg')
          +above($phoneWidth + 1)
            margin-left: 0
        &.indiegogo
          background-image: url('/img/integration-logos/indiegogo.svg')
        &.stripe
          background-image: url('/img/integration-logos/stripe.svg')
        &.paypal
          background-image: url('/img/integration-logos/paypal.svg')
        &.mailchimp
          background-image: url('/img/integration-logos/mailchimp.svg')
        &.github
          background-image: url('/img/integration-logos/github.svg')
          +above($phoneWidth + 1)
            margin-right: 0

        +below($phoneWidth)
          width: 100%
          margin: ($spacing * 2)

  .misc-facts
    margin-top: ($spacing * 12)
    align-items: flex-start
    margin-bottom: ($spacing * -8)

    .card
      margin: 0 ($spacing * 8)
      padding: ($spacing * 4)
      padding-bottom: ($spacing * 12)

      +below($phoneWidth)
        margin: ($spacing * 4) 0

      img
        height: 50px

    .always-exploring
      background-color: #50329E
      background: linear-gradient(135deg, #50329E, #358AC5, #45C7E0)

    .global-engine
      background-color: #3124AE
      background: linear-gradient(135deg, #3124AE, #B865D3)

  .get-started
    background-color: $backgroundColor2

    & > a
      display: none

    .content
      margin 2.5rem 0

      .button:first-child
        margin-right: 1rem

      &:last-child
        text-align: center

// Short notice form

  .modal-form
    width: 100vw
    height: 100vh
    position: fixed
    z-index: 2000
    top: 0
    left: 0
    background: #3498db
    color: white
    overflow: auto
    opacity: 0
    pointer-events: none
    transition: opacity $transitionTime ease-in-out

    .close-demo-form
      position: absolute
      right: 2rem
      top: 2rem
      font-size: 3rem
      line-height: 2rem

    .thank-you
      font-size: 2rem
      position: absolute
      top: 50%
      transform: translateY(-50%)
      text-align: center

    h2
    h4
      color: white
      margin-bottom: 1rem

    input
    textarea
      outline: 0
      border: 1px solid white
      height: 2.5rem
      line-height: 2.5rem
      padding: 0rem 1rem
      display: block
      margin: .5rem 0 1rem
      font-size: 1rem
      width: 100%
      background-color: transparent
      color: white

      &::-webkit-input-placeholder
        color: white
      &:-ms-input-placeholder
        color: white
      &::-moz-placeholder
        color: white
      &:-moz-placeholder
        color: white
      &:placeholder
        color: white

    textarea
      height: 200px

    button
      line-height: 1rem
      font-weight: 400

    form
      padding: 2rem

    input[type=radio]
      display: none

    .options
      display: table
      margin: .5rem 0 1rem
      width: 100%
      position: relative

      label
        max-width: 45%
        width: 200px
        transition: all $transitionTime ease-in-out
        padding: 1rem
        position: relative
        left: 0
        top: 0
        display: inline-block
        text-align: center
        transform: translateX(105%)
        border: 1px solid white

        &:last-child
          position: absolute

      input:checked + label
        background-color: white
        color: #3498db
        transform: none

  #demo-form-toggle
    display: none

  #demo-form-toggle:checked ~ .modal-form
    opacity: 1
    pointer-events: initial

