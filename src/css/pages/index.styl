#index > main
  .hero
    background-color: $hanzoIndigo
    height: auto

    h1
      color: $hanzoGreen

    .button
      margin $spacing * 2 $spacing * 2 0 0

  .support-crypto
    color: #263238
    padding-top: 15vh
    padding-bottom: 15vh

    h2
    h4
      color: $hanzoPurple

    .columns
      align-items: top

      .content
        margin: $spacing * 2

  .developers-first
    background-color: $hanzoIndigo
    padding-top: 15vh
    padding-bottom: 15vh

    h2
      color: $hanzoGreen

    .content
      p
        padding 0

    .columns
      .column
        .content
          p
            padding $spacing

  .get-started
    background-color: $hanzoIndigoDarker
    padding-top: 15vh
    padding-bottom: 15vh

    h2
      color: $hanzoGreen
      margin: 0

    .button
      margin $spacing * 2 $spacing * 2 $spacing * 2 0

  .docs-button
    background-color: $white
    color: $hanzoPurple

  .join-button
    background-color: $hanzoPurple

  // Short notice form
  .modal-form
    width: 100vw
    height: 100vh
    position: fixed
    z-index: 2000
    top: 0
    left: 0
    background: #3498db
    color: white
    overflow: auto
    opacity: 0
    pointer-events: none
    transition: opacity $transitionTime ease-in-out

    .close-demo-form
      position: absolute
      right: 2rem
      top: 2rem
      font-size: 3rem
      line-height: 2rem

    .thank-you
      font-size: 2rem
      position: absolute
      top: 50%
      transform: translateY(-50%)
      text-align: center

    h2
    h4
      color: white
      margin-bottom: 1rem

    input
    textarea
      outline: 0
      border: 1px solid white
      height: 2.5rem
      line-height: 2.5rem
      padding: 0rem 1rem
      display: block
      margin: .5rem 0 1rem
      font-size: 1rem
      width: 100%
      background-color: transparent
      color: white

      &::-webkit-input-placeholder
        color: white
      &:-ms-input-placeholder
        color: white
      &::-moz-placeholder
        color: white
      &:-moz-placeholder
        color: white
      &:placeholder
        color: white

    textarea
      height: 200px

    button
      line-height: 1rem
      font-weight: 400

    form
      padding: 2rem

    input[type=radio]
      display: none

    .options
      display: table
      margin: .5rem 0 1rem
      width: 100%
      position: relative

      label
        max-width: 45%
        width: 200px
        transition: all $transitionTime ease-in-out
        padding: 1rem
        position: relative
        left: 0
        top: 0
        display: inline-block
        text-align: center
        transform: translateX(105%)
        border: 1px solid white

        &:last-child
          position: absolute

      input:checked + label
        background-color: white
        color: #3498db
        transform: none

  #demo-form-toggle
    display: none

  #demo-form-toggle:checked ~ .modal-form
    opacity: 1
    pointer-events: initial

