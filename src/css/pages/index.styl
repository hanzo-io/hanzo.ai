    position: absolute

    &:nth-child(1)
      left: 45vw
      top: 0
      transform: translateY(-8vw)
      img
        position: relative
        animation: fly-in 1s 1 ease-in-out


    &:nth-child(2)
      left: 70vw
      top: 0
      transform: translateY(-25vw)
      img
        position: relative
        animation: fly-in 1.2s 1 ease-in-out

    &:nth-child(3)
      left: 55vw
      top: 0
      transform: translateY(-24vw)

      img
        position: relative
        animation: fly-in 1.3s 1 ease-in-out

