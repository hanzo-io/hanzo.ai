/* HEADER START */
header
  background-color: transparent

  &:before
    background-color: transparent

  .nav *
    color: $white

  .menu-bodies *
    color: $black

  .menu-link-name
    font-weight: 600

  .menu-link-description
    font-weight: 200
    font-size: 0.9em
    color: $bodyLight

  .menu-link:hover .menu-link-text
    filter: brightness(50%)
    // filter: none

  .complex-menus .menu-wrapper .menu-bodies .menu-body :first-child
    width: 200px

  .complex-menus .menu-content, .complex-menus .menu-wrapper
    border-radius: $borderRadius
    box-shadow: $boxShadow

  .menu-wrapper .menu-bodies .menu-body .menu-content
    border-radius: $borderRadius

  .mobile-menus .menu-content
    background-color: $grey900

/* HEADER END */
