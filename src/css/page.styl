// START Body

body
  color: $textColor3

// END Body

// START Anchor

a
  color: $linkColor1

// END Anchor

// START Headers

h1, h2, h3, h4, h5
  color: $headerColor1

// END Headers

// START Header

header
  .menu-link-name
    font-weight: 600

// END Header

// START Footer

footer
  overflow: hidden
  padding-top: 2.5rem
  background-color: $backgroundColor2
  border-top: 1px solid $footerSmallPrintBackgroundColor

  .logos
    .logo-link:nth-child(n+2)
      .logo-image
        height: 1rem
        margin-left: .5rem
        padding: 0

        border-left: 1px solid $textColor3
        padding-left: .5rem

  *
    color: $textColor3 !important
    line-height: 2rem

  .footer-small-print
    background-color: $footerSmallPrintBackgroundColor
    margin-top: 4rem

    &:before
      content: ''
      display: block
      position: absolute
      left: -100%
      top: 0
      background-color: $footerSmallPrintBackgroundColor
      width: 100%
      height: 100%

    &:after
      content: ''
      display: block
      position: absolute
      right: -100%
      top: 0
      background-color: $footerSmallPrintBackgroundColor
      width: 100%
      height: 100%

// END Footer

// START Hero

$heroHeight = 80vh

.hero
  background: linear-gradient(135deg, #3c72d0 0%,#3b77ce 21%,#25d4a7 61%,#34e4ea 100%)
  height: $heroHeight
  overflow: hidden
  color: $textColorLight

  .bg
    position: absolute
    left: 0
    top: 0
    height: $heroHeight
    min-height: $sectionMinHeight
    min-width: 100vw
    z-index: -1

  // .bg-stars
  //   position: absolute
  //   animation: star-blur 20s infinite ease-in-out

  //   +above($phoneWidth + 1)
  //     top: 20%
  //     left: 50vw
  //     height: 50vh

  //   +below($phoneWidth)
  //     left: 25vw
  //     top: 40%
  //     width: 100vw

  .content
    top: 50%
    position: relative
    transform: translateY(-50%)

    h1, h3
      color: $textColorLight

    h3
      font-weight: 200
      margin: 0
      margin-bottom: 1.5rem

    .button
      margin-right: 1rem

// END Hero

// START Card

.card
  border: 2px solid $borderColor1
  box-shadow: 2px 4px 10px .5px rgba(0,0,0,.5)
  color: $textColor1
  padding: 4rem 2.5rem
  border-radius: 8px

// END Card
