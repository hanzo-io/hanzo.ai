// START Body

body
  color: $textColor3

// END Body

// START Anchor

a
  color: $linkColor1

// END Anchor

// START Headers

h1, h2, h3, h4, h5
  color: $headerColor1

// END Headers

// START Header

header
  .logo
    .logo-link:nth-child(n+2)
      .logo-image
        height: 1rem
        margin-top: .3rem
        margin-left: .5rem
        padding: 0

        +above(751px)
          border-left: 1px solid $textColorLight
          padding-left: .5rem

        +below($phoneWidth)
          border-left: 1px solid $textColorLight
          padding-left: .5rem

        +between($phoneWidth + 1, 750px)
          display: block

// END Header

// START Hero

$heroHeight = 80vh

.hero
  background: linear-gradient(135deg, #3c72d0 0%,#3b77ce 21%,#25d4a7 61%,#34e4ea 100%)
  height: $heroHeight
  overflow: hidden
  color: $textColorLight

  .bg
    position: absolute
    left: 0
    top: 0
    height: $heroHeight
    min-height: $sectionMinHeight
    min-width: 100vw
    z-index: -1

  // .bg-stars
  //   position: absolute
  //   animation: star-blur 20s infinite ease-in-out

  //   +above($phoneWidth + 1)
