  //     left: 50vw
  //     height: 50vh

  //   +below($phoneWidth)
  //     left: 25vw
  //     top: 40%
  //     width: 100vw

  .content
    top: 50%
    position: relative
    transform: translateY(-50%)

    h1, h3
      color: $textColorLight

    h3
      font-weight: 200
      margin: 0
      margin-bottom: 1.5rem

    .button
      margin-right: 1rem

// END Hero
